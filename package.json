{
  "name": "proshop-microfrontends",
  "version": "2.0.0",
  "private": true,
  "description": "ProShop ecommerce with micro-frontends architecture",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node apps/backend/server.js",
    "client": "npm start --prefix apps/monolith-frontend",
    "data:import": "node apps/backend/seeder",
    "data:destroy": "node apps/backend/seeder -d",
    "graph": "nx graph",
    "reset": "nx reset"
  },
  "author": "Brad Traversy (original), Pedro Silva (micro-frontends migration)",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/eslint": "22.4.4",
    "@nx/eslint-plugin": "22.4.4",
    "@nx/jest": "22.4.4",
    "@nx/js": "^22.4.4",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "concurrently": "^7.6.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "^22.4.4",
    "prettier": "~3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "nx": {
    "includedScripts": []
  },
  "dependencies": {}
}
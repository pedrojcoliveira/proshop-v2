{
  "name": "proshop-microfrontends",
  "version": "2.0.0",
  "private": true,
  "description": "ProShop ecommerce with micro-frontends architecture",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "npm run dev --prefix apps/backend",
    "client": "npm run dev --prefix apps/monolith-frontend",
    "data:import": "node apps/backend/seeder",
    "data:destroy": "node apps/backend/seeder -d",
    "graph": "nx graph",
    "reset": "nx reset"
  },
  "author": "Brad Traversy (original), Pedro Silva (micro-frontends migration)",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nx": "^22.4.4"
  },
  "nx": {
    "includedScripts": []
  }
}